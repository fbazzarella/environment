# Custom
alias gp-provision='cp ../gp-provision.sh ./ && ./gp-provision.sh && rm gp-provision.sh'

# System
alias upgrade='sudo apt update && sudo apt -y upgrade'
alias aliases='editor ~/.bash_aliases'
alias aliases-cat='cat ~/.bash_aliases'
alias count-lines='ls -1 | wc -l'
alias psa='ps aux | grep'

# Git
alias gs='git status'
alias ga='git add'
alias gr='git restore'
alias grc='gr --cached'
alias gc='git commit'
alias gca='gc --amend'
alias gl='git log'
alias gb='git checkout'
alias pull='git pull'
alias push='git push'
alias branch='git branch'

# Docker
alias dk='docker'
alias psc='dk ps --all'
alias psi='dk image ls'
alias psv='dk volume ls'
alias psd='psc && echo && psi && echo && psv'
alias dc='dk compose'
alias dcb='dc build'
alias dcu='dc up'
alias dcs='dc stop'
alias dce='dc exec'

# Rails
alias rspec='bundle exec rspec'
alias dbmigrate='rails db:migrate db:test:prepare'
alias dbrollback='rails db:rollback db:test:prepare'
alias dbforback='rails db:migrate db:rollback'
alias rs='rails server'
alias rc='rails console'

