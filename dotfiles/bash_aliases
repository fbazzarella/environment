# System
alias psa='ps aux | grep'
alias aliases='editor ~/.bash_aliases'
alias upgrade='sudo apt update -qq && sudo apt -y upgrade'

# Git
alias gs='git status'
alias ga='git add'
alias gr='git restore'
alias gc='git commit'
alias gl='git log'
alias gb='git checkout'
alias pull='git pull'
alias push='git push'

# Docker
alias dk='docker'
alias psc='dk ps --all'
alias psi='dk image ls'
alias psv='dk volume ls'
alias psd='psc && echo && psi && echo && psv'
alias dc='dk compose'
alias dcb='dc build'
alias dcu='dc up'
alias dce='dc exec'
alias dcer='dce rails'

# Rails
alias bundle='dcer bundle'
alias rails='dcer bin/rails'
alias rsetup='dcer bin/setup'
alias rbash='dcer /bin/bash'
alias rspec='dcer rspec'
alias sidekiq='dcer sidekiq -q default'
alias dbmigrate='rails db:migrate db:test:prepare'
alias dbrollback='rails db:rollback db:test:prepare'
alias dbforback='rails db:migrate db:rollback'
alias dbreset='rails db:reset db:test:prepare'
alias cleanup='rails log:clear tmp:clear'
alias rs='rails server -b 0.0.0.0'
alias rc='rails console'
alias psql='rbash -c "psql -h postgres -U postgres -W"'
