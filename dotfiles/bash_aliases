# System
alias psa='ps aux | grep'
alias aliases='editor ~/.bash_aliases'
alias upgrade='sudo apt update && sudo apt -y upgrade'

# Git
alias gs='git status'
alias ga='git add'
alias gr='git restore'
alias gc='git commit'
alias gl='git log'
alias gb='git checkout'
alias pull='git pull'
alias push='git push'

# Docker
alias dk='docker'
alias psc='dk ps --all'
alias psi='dk image ls'
alias psv='dk volume ls'
alias psd='psc && echo && psi && echo && psv'
alias dc='dk compose'
alias dcb='dc build'
alias dcu='dc up'
alias dce='dc exec'
alias dcer='dce rails'

# Rails
alias drails='dcer bin/rails'
alias dsetup='dcer bin/setup'
alias ddev='dcer bin/dev'
alias dbash='dcer /bin/bash'
alias bundle='dcer bundle'
alias rspec='dcer rspec'
alias sidekiq='dcer sidekiq -q default'
alias dbseed='drails db:seed'
alias dbmigrate='drails db:migrate db:test:prepare'
alias dbrollback='drails db:rollback db:test:prepare'
alias dbforback='drails db:migrate db:rollback'
alias dbreset='drails db:reset db:test:prepare'
alias cleanup='drails log:clear tmp:clear'
alias rs='drails server -b 0.0.0.0'
alias rc='drails console'
alias psql='dbash -c "psql -h postgres -U postgres -W"'
